@section Styles{
    <link href="~/css/adminPanel.css" rel="stylesheet" asp-append-version="true"/>
}
@model AdminPanelInfoResponse

<!-- Header -->

<partial name="_HeaderAdmin"/>

<!-- End Header -->

<style>
    .dashboard-card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        cursor:pointer;
    }

        .dashboard-card:hover {
            transform: scale(1.05);
        }
</style>

<!-- Main -->
<main class="bg-light vh-100">
    <!-- Cards -->
    <section class="p-5">
        <div class="container-md">
            <div class="row">

                <div class="col-sm-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="d-flex align-items-center justify-content-start py-3 px-3 rounded-3 bg-white shadow-lg card-transform">
                        <div class="p-3 bg-primary rounded-3 d-flex align-items-center">
                            <i class="fa-solid fa-eye-low-vision text-white fa-2x"></i>
                        </div>
                        <div class="ps-2 d-flex flex-column align-items-center" dir="ltr">
                            <p class="mb-1 text-muted text-start">بازدید امروز</p>
                            <h4 class="mb-0 ms-auto">14,000</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="d-flex align-items-center justify-content-start py-3 px-3 rounded-3 bg-white shadow-lg card-transform">
                        <div class="py-3 px-4 bg-success rounded-3 d-flex align-items-center">
                            <i class="fa-solid fa-dollar text-white fa-2x"></i>
                        </div>
                        <div class="ps-2 d-flex flex-column align-items-center" dir="ltr">
                            <p class="mb-1 text-muted text-start me-auto">درامد</p>
                            <h4 class="mb-0 ms-auto"><i class="fa-solid fa-plus fa-2xs"></i> @Model.Income.ToString("N0")</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="d-flex align-items-center justify-content-start py-3 px-3 rounded-3 bg-white shadow-lg card-transform">
                        <div class="py-3 px-4 bg-primary rounded-3 d-flex align-items-center">
                            <i class="fa-solid fa-building text-white fa-2x"></i>
                        </div>
                        <div class="ps-2 d-flex flex-column align-items-center" dir="ltr">
                            <p class="mb-1 text-muted text-start">سفارشات</p>
                            <h4 class="mb-0 ms-auto">@Model.NumberOfOrders.ToString("N0")</h4>
                        </div>
                    </div>
                </div>

                <div class="col-sm-6 col-lg-3 mb-3 mb-lg-0">
                    <div class="d-flex align-items-center justify-content-start py-3 px-3 rounded-3 bg-white shadow-lg card-transform">
                        <div class="p-3 bg-primary rounded-3 d-flex align-items-center">
                            <i class="fa-solid fa-users text-white fa-2x"></i>
                        </div>
                        <div class="ps-2 d-flex flex-column align-items-center" dir="ltr">
                            <p class="mb-1 text-muted text-start">تعداد کاربران</p>
                            <h4 class="mb-0 ms-auto">@Model.NumberOfUsers.ToString("N0")</h4>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
    <!-- End Cards -->

    <!-- Pages -->
    <section>
        <div class="container mt-5">
            <h1 class="text-center mb-4">داشبورد</h1>
            <div class="row justify-content-center">
                <!-- Product Management Card -->
                <div class="col-md-4 mb-4">
                    <div class="card dashboard-card text-center">
                        <div class="card-body">
                            <h5 class="card-title">مدیریت محصولات</h5>
                            <p class="card-text">مشاهده، اضافه یا ویرایش محصولات</p>
                            <a asp-action="Products" class="btn btn-outline-info">مشاهده</a>
                        </div>
                    </div>
                </div>

                <!-- User Management Card -->
                <div class="col-md-4 mb-4">
                    <div class="card dashboard-card text-center">
                        <div class="card-body">
                            <h5 class="card-title">مدیریت کاربران</h5>
                            <p class="card-text">مدیریت اطلاعات کاربران و دسترسی‌ها</p>
                            <a asp-action="UserManage" class="btn btn-outline-danger">مشاهده</a>
                        </div>
                    </div>
                </div>

                <!-- Order Management Card -->
                <div class="col-md-4 mb-4">
                    <div class="card dashboard-card text-center">
                        <div class="card-body">
                            <h5 class="card-title">مدیریت سفارشات</h5>
                            <p class="card-text">بررسی و مدیریت سفارشات ثبت‌شده</p>
                            <a asp-action="Orders" class="btn btn-outline-primary">مشاهده</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Pages -->


</main>
<!-- End Main -->