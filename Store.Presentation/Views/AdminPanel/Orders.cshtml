                <div class="col-12">

                    <div class="table-responsive table-container">
                        <table class="table table-sm table-striped table-dark table-bordered border-primary table-hover shadow-sm" style="overflow: scroll;">
                            <thead class="text-center">
                                <tr class="table-secondary">
                                    <th class="fw-bold">#</th>
                                    <th>شماره موبایل</th>
                                    <th>تعداد کل کالا ها</th>
                                    <th>مبلغ کل</th>
                                    <th>تاریخ</th>
                                </tr>
                            </thead>
                            <tbody class="text-center align-middle" style="cursor: pointer;">
                                @if(Model.OrderInfoDtos != null){
                                    @foreach (var item in Model.OrderInfoDtos)
                                    {
                                        <tr>
                                            <td class="fw-bold">1</td>
                                            <td><a href="tel:@item.PhoneNumber" class="text-decoration-none text-info">@item.PhoneNumber</a></td>
                                            <td>@item.NumberOfItem</td>
                                            <td style="max-width: 250px;">
                                                <div class="overflow-auto" style="max-height: 70px;">
                                                    @item.TotalAmount.ToString("N0")
                                                </div>
                                            </td>
                                            <td>@item.DateTime</td>
                                        </tr>
                                    }
                                }     
                                else{
                                    <tr>
                                        <td class="fw-bold">1</td>
