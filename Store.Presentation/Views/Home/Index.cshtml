@section Styles{
    <style>
    .product-card .card-body p {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    </style>
}

<!-- Header -->
<header class="mb-2">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-light px-3">
        <button class="navbar-toggler nav-button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a href="" class="navbar-brand">
            <img src="images/batman.svg" class="me-1" style="width: 55px; height: 55px;" alt="">
        </a>
        <div class="navbar-collapse collapse w-100" id="mynavbar">
            <ul class="navbar-nav list-unstyled">
                <li class="nav-item ">
                    <a asp-action="Index" class="nav-link m-2 nav-icon"><i class="fa-solid fa-home text-black" style="font-size: 20px;"></i></a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Basket" asp-action="Index" class="nav-link m-2 nav-icon"><i class="fa-solid fa-basket-shopping text-black" style="font-size: 20px;"></i></a>
                </li>
            </ul>
        </div>

    </nav>
    <!-- End of Navbar -->

</header>
<!-- End Header -->
<!-- Main -->
<main>
    <!-- Hero -->
    <div class="container">
        <img src="images/icons8-bat-50.png" class="position-absolute" alt="" style="top: 160px ; right: 130px;">
        <img src="images/icons8-bat-50.png" class="position-absolute" alt="" style="top: 250px ; right: 550px;">
        <img src="images/icons8-bat-50.png" class="position-absolute" alt="" style="top: 560px ; right: 330px;">
        <div class="row" style="height: 80vh;">
            <div class="col-6 d-flex flex-column justify-content-center align-items-center text-center">
                <h1 class="text-black fw-bold"><i class="fa-solid fa-computer me-3"></i>فروشگاه سخت افزار بتمن</h1>
                <p class="h5 fw-bold">بهترین فروشگاه ایران تقدیم میکند.</p>
            </div>
            <div class="col-6">
                <img src="images/45oled8-1200x1200-1.webp" class="img-fluid" alt="">
            </div>
        </div>
    </div>
    <!-- End Hero -->
    <!-- Products -->
    <section class="mb-3 mt-5">
        <div class="container">

            <h1 class="mb-5 fw-bolder">محصولات</h1>
            <!-- Filters -->
            <div class="row p-3 mb-5 border border-2 border-secondary-subtle rounded justify-content-center align-items-center">

                <div class="col-md-2">
                    <p class="mb-0 h4 fw-bold text-dark-emphasis">فیلتر ها :</p>
                </div>
                <div class="col-md-10 d-flex justify-content-around">

                    <!-- Category Filter -->
                    <div class="col-lg-4">
                        <select class="form-control w-auto bg-secondary-subtle text-center">
                            <option value="0">-- دسته بندی --</option>
                            <option value="0">Card Graphic</option>
                        </select>
                    </div>

                    <!-- Brand Filter -->
                    <div class="col-lg-4">
                        <select class="form-control w-auto bg-secondary-subtle text-center">
                            <option value="0">-- برند --</option>
                            <option value="0">Nvidia</option>
                        </select>
                    </div>

                    <!-- Price Range Filter -->
                    <div class="col-lg-4">
                        <select class="form-control w-auto bg-secondary-subtle text-center">
                            <option value="0">-- رنج قیمت --</option>
                            <option value="1">کمتر از 20 میلیون</option>
                            <option value="2">بین 20 تا 40 میلیون</option>
                            <option value="3">بیشتر از 40 میلیون</option>
                        </select>
                    </div>

                </div>

            </div>
            <!-- End Filters -->

            <!-- Product List -->
            <div id="product_list" class="row">                             

            </div>
            <!-- End Product List -->
        </div>
    </section>
    <!-- End Products -->
</main>
<!-- End Main -->
<!-- Footer -->
<footer>
</footer>
<!-- Footer -->

@section Scripts{
    <script src="~/js/filter.js" asp-append-version="true"></script>
}